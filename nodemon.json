{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src/__generated__",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "ts": "ts-node -r tsconfig-paths/register"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts, ejs"
}
